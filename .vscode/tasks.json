{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "chcp 65001; stack build --fast",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(?:.*?> )?(.*?):(\\d+):(\\d+): (.*?):",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
        },
        "owner": "haskell",
        "background": {
          "beginsPattern": ".*?> build",
          "endsPattern": "^--  While"
        }
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "revealProblems": "never",
      }
    },
  ]
}